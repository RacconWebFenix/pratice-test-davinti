generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// Como estou usando sqlite n√£o se utiliza parametros de tamanho mas deixo um exemplo caso troque para mysql e outros

model Contato {
  id       Int        @id @default(autoincrement())
  nome     String
  idade    Int
  telefone Telefone[]
}

model Telefone {
  id        Int      @id @default(autoincrement())
  numero    String
  contato   Contato? @relation(fields: [contatoId], references: [id], onDelete: Cascade)
  contatoId Int?
}

